<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Samvel_Papyan_Android_Homeworks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="toolbarDifferentColor" parent="Theme.Samvel_Papyan_Android_Homeworks">
        <irgtem name="colorPrimary">@color/green_1</irgtem>
    </style>
    <style name="textViewStyle1">
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textViewStyle2">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/green_1</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">clip_horizontal</item>
    </style>
    <style name="textViewStyle3">
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="textViewStyle4">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="my_check_box" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorSecondary">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <style name="my_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorSecondary">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <style name="my_switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorSecondary">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <dimen name="_32dp">32dp</dimen>
    <dimen name="_32sp">32sp</dimen>
    <dimen name="_16sp">16sp</dimen>
    <dimen name="_24sp">24sp</dimen>
    <dimen name="_30sp">30sp</dimen>
    <color name="green_1">#20B30E</color>
    <color name="blue">#2E189B</color>
    <color name="gold">#FF9800</color>
</resources>